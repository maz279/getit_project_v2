# ================================
# APPLICATION CONFIGURATION
# ================================
NODE_ENV=production
APP_NAME=GetIt Bangladesh
APP_VERSION=2.0.0
APP_PORT=5000
APP_HOST=0.0.0.0
APP_URL=https://getit.com.bd

# ================================
# DATABASE CONFIGURATION
