DEFAULT_CURRENCY=BDT
DEFAULT_TIMEZONE=Asia/Dhaka

# Tax Configuration (Production)
VAT_RATE=0.15
CUSTOMS_DUTY_RATE=0.20
ADVANCE_TAX_RATE=0.05

# Government API Integration
BANGLADESH_BANK_API_URL=${BANGLADESH_BANK_API_URL}
