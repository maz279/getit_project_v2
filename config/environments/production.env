MAPBOX_ACCESS_TOKEN=${MAPBOX_ACCESS_TOKEN}

# ================================
# FEATURE FLAGS (Production)
# ================================
ENABLE_SOCIAL_LOGIN=true
ENABLE_GROUP_BUYING=true
ENABLE_LIVE_CHAT=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_VOICE_SEARCH=true
ENABLE_VISUAL_SEARCH=true
ENABLE_CRYPTOCURRENCY_PAYMENTS=false
ENABLE_B2B_FEATURES=true
ENABLE_INTERNATIONAL_SHIPPING=true
ENABLE_ADVANCED_ANALYTICS=true

# ================================
# PERFORMANCE OPTIMIZATION
# ================================
# CDN Configuration
CDN_URL=${CDN_URL}
CDN_API_KEY=${CDN_API_KEY}
STATIC_ASSETS_URL=${STATIC_ASSETS_URL}

# Caching Strategy
ENABLE_REDIS_CACHE=true
ENABLE_MEMORY_CACHE=true
ENABLE_BROWSER_CACHE=true
CACHE_MAX_AGE=86400

# Database Optimization
DB_CONNECTION_POOL_SIZE=50
DB_QUERY_TIMEOUT=30000
DB_STATEMENT_TIMEOUT=60000

# ================================
# BACKUP & DISASTER RECOVERY
# ================================
# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=${BACKUP_ENCRYPTION_KEY}

# AWS S3 Backup
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_BACKUP_BUCKET=${AWS_BACKUP_BUCKET}
AWS_REGION=ap-southeast-1

# Disaster Recovery
DR_REGION=ap-south-1
DR_DATABASE_URL=${DR_DATABASE_URL}
FAILOVER_THRESHOLD=300

# ================================
# COMPLIANCE & GOVERNANCE
# ================================
# PCI DSS Compliance
PCI_COMPLIANCE_MODE=true
CARD_DATA_ENCRYPTION=true
PCI_AUDIT_LOG=true

# GDPR Compliance
GDPR_COMPLIANCE_MODE=true
DATA_RETENTION_PERIOD=2555
CONSENT_MANAGEMENT=true

# Bangladesh Data Protection
BD_DATA_PROTECTION_MODE=true
LOCAL_DATA_RESIDENCY=true
GOVERNMENT_ACCESS_LOG=true

# ================================
# PRODUCTION OPTIMIZATIONS
# ================================
# Node.js Optimizations
NODE_OPTIONS=--max-old-space-size=4096
UV_THREADPOOL_SIZE=128

# Cluster Configuration
CLUSTER_MODE=true
CLUSTER_WORKERS=auto

# Process Management
PM2_INSTANCES=max
PM2_EXEC_MODE=cluster
PM2_MAX_MEMORY_RESTART=1024M

# Health Checks
HEALTH_CHECK_ENDPOINT=/health
READINESS_CHECK_ENDPOINT=/ready
LIVENESS_CHECK_ENDPOINT=/live

# Graceful Shutdown
GRACEFUL_SHUTDOWN_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000
HEADERS_TIMEOUT=66000