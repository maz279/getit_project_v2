# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# MONITORING & LOGGING
# ================================
# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE_PATH=./logs/development.log

# Monitoring URLs
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# ================================
# BANGLADESH SPECIFIC CONFIGURATION
# ================================
# Localization
DEFAULT_LANGUAGE=bn
SUPPORTED_LANGUAGES=bn,en,hi,ar
DEFAULT_CURRENCY=BDT
DEFAULT_TIMEZONE=Asia/Dhaka

# Tax Configuration
VAT_RATE=0.15
CUSTOMS_DUTY_RATE=0.20

# Location Services
BANGLADESH_POSTAL_API_URL=http://api.postcode.com.bd
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ================================
# FEATURE FLAGS
# ================================
ENABLE_SOCIAL_LOGIN=true
ENABLE_GROUP_BUYING=true
ENABLE_LIVE_CHAT=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_VOICE_SEARCH=true
ENABLE_VISUAL_SEARCH=false
ENABLE_CRYPTOCURRENCY_PAYMENTS=false
ENABLE_B2B_FEATURES=false

# ================================
# DEVELOPMENT TOOLS
# ================================
# Debug Configuration
DEBUG_MODE=true
VERBOSE_LOGGING=true
API_DOCUMENTATION=true
MOCK_EXTERNAL_SERVICES=true

# Testing
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/getit_test
SEED_DATABASE=true
RESET_DATABASE_ON_STARTUP=false