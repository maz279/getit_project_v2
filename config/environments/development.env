# Push Notifications
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# ================================
# SECURITY CONFIGURATION
# ================================
# JWT Configuration
JWT_SECRET=your_jwt_secret_key_dev
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_dev
