# Phase 1 Environment Configuration Example
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://localhost:5432/getit_platform

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Keys (Replace with actual values)
OPENAI_API_KEY=sk-your-openai-key-here
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_token_here

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
ANALYTICS_ENABLED=true

# Testing Configuration
TEST_ENVIRONMENT=development
JEST_TIMEOUT=30000

# Micro-Frontend Configuration
CUSTOMER_MICROFRONTEND_URL=http://localhost:3001
ADMIN_MICROFRONTEND_URL=http://localhost:3002
VENDOR_MICROFRONTEND_URL=http://localhost:3003

# Performance Budgets
PERFORMANCE_BUDGET_FCP=1000
PERFORMANCE_BUDGET_LCP=2500
PERFORMANCE_BUDGET_FID=100
PERFORMANCE_BUDGET_CLS=0.1
PERFORMANCE_BUDGET_BUNDLE_SIZE=500000

# Session Configuration
SESSION_SECRET=your_session_secret_key_here
SESSION_DURATION=86400000